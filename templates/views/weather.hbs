<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
    <title>Weather app</title>
</head>

<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_menu">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
               </div>

               <div class="tempInformation">
                <div class="top-layer">
                    <p id="day">Tuesday</p>
                    <p id="date">13 Oct</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output here</p>
                    <div class="middle_layer data
                    _hide">
                    <p ><span id="temp">0</span><sup>&deg;</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
               </div>
            </div>
        </div>
    </div>
    <!-- footer -->
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>